<h1>Add Users</h1>
{{#if error}} <span>{{error}}</span>{{/if}}
<form class="form" method="POST" action="/user/add">
  <div class="form-group">
    <label>ID</label>
    <input type="text" name="id" class="form-control" placeholder="Add ID">
  </div>
  <div class="form-group">
    <label>First Name</label>
    <input type="text" name="first_name" class="form-control" placeholder="Add your first name">
  </div>
  <div class="form-group">
    <label>Last Name</label>
    <input type="text" name="last_name" class="form-control" placeholder="Add your second name">
  </div>
  <div class="form-group">
    <label>Email</label>
    <input type="text" name="email" class="form-control" placeholder="Add your Email">
  </div>
  <div class="form-group">
    <label>Phone</label>
    <input type="text" name="phone" class="form-control" placeholder="Add your Phone Number">
  </div>
  <input type="submit" class="btn btn-primary" value="Save">
</form>